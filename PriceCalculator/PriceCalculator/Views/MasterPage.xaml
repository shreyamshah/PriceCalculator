                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True" Icon="hamburger.png" Title="Price Calc"
                  x:Class="PriceCalculator.Views.MasterPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu" Icon="hamburger.png" >
            <!-- TODO: // Update the Layout and add some real menu items  
                <Button Text="ViewA" Command="{Binding NavigateCommand}" CommandParameter="ViewA" /> -->
