<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PriceCalculator.Views.PartyAddPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SavePartyCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="10,30,10,0" HorizontalOptions="FillAndExpand" BindingContext="{Binding Party}">
            <Label Text="Name"/>
            <Entry Text="{Binding Name}"/>
            <Label Text="Profit Percentage"/>
            <Entry Text="{Binding ProfitPercent}" Keyboard="Numeric"/>
        </StackLayout>
    </ContentPage.Content>  
</ContentPage>